{
  "version": 2,
  "builds": [
    {
      "src": "./package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "backend/app.py", 
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/app/(.*)",
      "dest": "backend/app.py" 
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}